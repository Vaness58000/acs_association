{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<div class="container"> 
   <form class="d-flex">
        <input class="form-control me-sm-2" type="text" placeholder="Recherche">
        <button type="button" class="btn btn-primary btn-lg">Rechercher</button>
      </form>
</div>
<div class="container d-flex flex-wrap "> 
{% for produit in produits %}

  <div class="card m-3 justify-content-center " style="width: 18rem;">
    <div>
      <div class="card-body"><a href="{{ path('app_main_produits_show', {'id': produit.id}) }}">
        <h5 class="card-title">{{produit.name}}</h5>
        <img src="{{ asset('/uploads/img/'~produit.images[0].name) }}" alt="Image" width="150">
        <p class="card-text">{{produit.categories.name}}&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<span>{{produit.price}}â‚¬</span></p>
        <p class="card-text">{{produit.achatAt ? produit.achatAt|date('d/m/Y') : '' }}</p>
      </div>
    </div>
  </div>
{% endfor %}
</div>
{% endblock %}
