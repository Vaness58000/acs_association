{% extends 'users.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <section class="container">
        <h1 class="text-center">Produits</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ produit.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ produit.slug }}</td>
                </tr>
                <tr>
                    <th>Achat_at</th>
                    <td>{{ produit.achatAt ? produit.achatAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Guarantee_at</th>
                    <td>{{ produit.guaranteeAt ? produit.guaranteeAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ produit.price }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ produit.content }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ produit.active ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_produits_index') }}"><img class="img-mod" src="{{ asset('img/revenir.svg')}}" alt="retour" /></a>

        <a href="{{ path('app_produits_edit', {'id': produit.id}) }}"><img class="img-mod" src="{{ asset('img/crayon.svg')}}" alt="modifier" /></a>

        {{ include('produits/_delete_form.html.twig') }}
    </sction>
{% endblock %}
