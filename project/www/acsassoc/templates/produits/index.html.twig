{% extends 'users.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <section class="container">
        <h1 class="text-center"><a href="{{ path('app_produits_new') }}"><img class="img-mod" src="{{ asset('img/ajouter-contenu.svg')}}" alt="crÃ©er" /></a> Produits</h1>

        <table class="table table-striped">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Nom</th>
                    <th class="text-center">Date d'achat</th>
                    <th class="text-center">Date de fin de garantie</th>
                    <th class="text-center">Prix</th>
                    <th class="text-center">Visible</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td class="text-center">{{ produit.id }}</td>
                    <td>{{ produit.name }}</td>
                    <td class="text-center">{{ produit.achatAt ? produit.achatAt|date('d/m/Y') : '' }}</td>
                    <td class="text-center">{{ produit.guaranteeAt ? produit.guaranteeAt|date('d/m/Y') : '' }}</td>
                    <td class="text-center">{{ produit.price }}</td>
                    <td class="text-center">
                        <div class="form-check form-switch text-center">
                            <input class="form-check-input" type="checkbox" data-id="{{ produit.id }}" {{ (produit.active) ? "checked" : "" }}>
                        </div>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_produits_show', {'id': produit.id}) }}"><img class="img-mod" src="{{ asset('img/partage-des-competences-512.svg')}}" alt="visualiser" /></a>
                        <a href="{{ path('app_produits_edit', {'id': produit.id}) }}"><img class="img-mod" src="{{ asset('img/crayon.svg')}}" alt="modifier" /></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        
    </sction>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/active_produit.js') }}"></script>
{% endblock %}
