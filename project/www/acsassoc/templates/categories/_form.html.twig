{{ form_start(form) }}
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Nom</label>
      <div class="col-sm-10">
        {{form_row(form.name)}}
      </div>
  </div>
      
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Couleur</label>
    <div class="col-sm-10">
        {{form_row(form.color)}}
    </div>
  </div>
  
  <div class="d-flex justify-content-center">
    {% if button_label|default('Enregistrer') == 'Update' %}
      <button class="m-2 btn bg-light bg-gradient"><img class="img-mod imd-delet-prd" src="{{ asset('img/available_updates.svg')}}" alt="update" /></button>
    {% else %}
      <button class="m-2 btn bg-light bg-gradient"><img class="img-mod imd-delet-prd" src="{{ asset('img/floppy.svg')}}" alt="enregistrer" /></button>
    {% endif %}

    <a class="m-2 btn bg-light bg-gradient" href="{{ path('app_categories_index') }}"><img class="img-mod" src="{{ asset('img/revenir.svg')}}" alt="retour" /></a>

    {% if editor_mod %}
      {{ include('categories/_delete_form.html.twig') }}
    {% endif %}
  </div>
{{ form_end(form) }}
