{% if role_user == "ROLE_ADMIN" %}
    <form method="post" action="{{ path('app_categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button class="btn bg-light bg-gradient"><img class="img-mod" src="{{ asset('img/poubelle.svg')}}" alt="supprimer" /></button>
    </form>
{% endif %}