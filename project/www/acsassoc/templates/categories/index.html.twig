{% extends 'users.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <section class="container">
        <h1 class="text-center"><a href="{{ path('app_categories_new') }}"><img class="img-mod" src="{{ asset('img/ajouter-contenu.svg')}}" alt="créer" /></a> Catégories</h1>

        <table class="table table-striped">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td class="text-center">{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_categories_show', {'id': category.id}) }}"><img class="img-mod" src="{{ asset('img/partage-des-competences-512.svg')}}" alt="visualiser" /></a>
                        <a href="{{ path('app_categories_edit', {'id': category.id}) }}"><img class="img-mod" src="{{ asset('img/crayon.svg')}}" alt="modifier" /></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        
    </sction>
    {% if pages > 1 %}
      <div class="container">
        <nav aria-label="Page navigation" class="d-flex justify-content-center">
          <ul class="pagination">
            {% for item in 1..pages %}
              <li class="page-item {{ (page == item) ? 'active' : '' }}"><a class="page-link" href="?page={{ item }}{{ (isAdmin) ? '&amp;admin=admin' : '' }}">{{ item }}</a></li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    {% endif %}
{% endblock %}
