{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Achat_at</th>
                <th>Guarantee_at</th>
                <th>Price</th>
                <th>Content</th>
                <th>Active</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.slug }}</td>
                <td>{{ produit.achatAt ? produit.achatAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ produit.guaranteeAt ? produit.guaranteeAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.content }}</td>
                <td>{{ produit.active ? 'Yes' : 'No' }}</td>
                <td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produits_new') }}">Create new</a>
{% endblock %}
