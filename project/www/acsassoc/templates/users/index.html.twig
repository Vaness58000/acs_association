{% extends 'users.html.twig' %}

{% block title %}Profil de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
    <div class="container d-flex flex-wrap justify-content-center">
        {% for message in app.flashes('message') %}
            <div class="alert alert-dismissible alert-success">
                <strong>{{message}}</strong>
            </div>
        {% endfor %}
        <div class=" row justify-content-center">
            <div class="col-md-auto">
                <div>
                    <h3 class="text-center">Profil de {{ app.user.firstname }} {{ app.user.name }}</h3>
                </div></br>
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <div>Nom :</div>
                        <div>Pr√©nom :</div>
                        <div>Email :</div>
                    </div>
                <div class="col-md-auto">
                    <div>{{ app.user.name }}</div>
                    <div>{{ app.user.firstname }}</div>
                    <div>{{ app.user.email }}</div></br>
                    <a class="btn btn-primary" href="{{ path('users_profil_modifier') }}">Modifier profil</a>
                    <a class="btn btn-primary" href="{{ path('users_pass_modifier')}}">Modifier mot de passe</a></br></br></br>
                </div>
                <div class="d-flex flex-wrap justify-content-center">
                    <div class="">
                        <div class="p-2">
                            <h3 class="text-center">Produits de {{ app.user.firstname }} {{ app.user.name }} ({{app.user.produits|length }})</h3>
                        </div>
                        <div class="p-2">
                            {% for produit in app.user.produits %}
                                <div class="row justify-content-md-left">
                                    <div class="col-md-auto">
                                        <div>Nom du produit :</div>
                                    </div>
                                    <div class="col-md-auto">
                                        <div>
                                            {{ produit.name }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
