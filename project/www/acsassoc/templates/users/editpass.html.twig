{% extends 'users.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
<div class="container">
{% for message in app.flashes('error') %}
    <div class="alert alert-dismissible alert-danger">
  <strong>{{message}}</strong>
</div>
{% endfor %}
    <div class=" row justify-content-center">
        <div class="col-md-auto">
            <div>
                <h3>Modification du mot de passe de {{ app.user.firstname }} {{ app.user.name }}</h3></br></br>
            <form method="post">
                    <fieldset>
                        <legend class="text-center">Modifier votre mot de passe</legend><br/> <br/> <br/> 
                        <div class="form-group row">
                            <div class="mb-3 row">
                                <label for="pass" class="col-sm-2 col-form-label">Mot de passe</label>
                                <div class="col-sm-10">
                                    <div class="d-flex align-items-center">
                                        <input type="password" id="pass" name="pass" class="registration_form_plainPassword form-control-plaintext">
                                        <i id="togglePassword" class="bi bi-eye-slash"></i>
                                    </div>
                                </div>
                            </div>
                    
                            <div class="mb-3 row">
                                <label for="pass2" class="col-sm-2 col-form-label">Confirmer le mot de passe</label>
                                <div class="col-sm-10">
                                    <div class="d-flex align-items-center">
                                        <input type="password" id="pass2" name="pass2" class="registration_form_plainPassword2 form-control-plaintext">
                                        <i id="togglePassword2" class="bi bi-eye-slash"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <p v-html="desc"></p>

                        <p class="text-center">
                    <button type="submit" class="btn btn-primary">Valider</button>
            </form>

            </div></br>
{% endblock %}
{% block javascripts %}

        <script src="{{ asset('js/eye_password.js') }}"></script>
{% endblock %}
